<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="space.tyryshkin.jkarta">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JKarta">
        <activity android:name=".Activity_General_Space_App"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Activity_Profile"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" /> <!-- Данный атрибут позволяет перемещать Views когда вылазит keyboard -->
        <activity
            android:name=".Activity_SignUp"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" /> <!-- Данный атрибут позволяет перемещать Views когда вылазит keyboard -->
        <activity
            android:name=".Activity_First"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"> <!-- Данный атрибут позволяет перемещать Views когда вылазит keyboard -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>